<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
</head>

<section  class="d-flex align-items-center" style="height: 100vh;background-color: black;">
    <div class="container-fluid d-flex justify-content-center ">
        <div class="row" style="width: 24rem;height: 28rem;border-radius: 10px;background-color: #ffffff;">
            <div class="p-3 col">
                <div class="text-center logo">
                    <img src="https://thumbs.dreamstime.com/b/chess-knight-horse-linear-logo-vector-illustration-chess-knight-horse-linear-logo-128622318.jpg"
                        style="width: 60px;" alt="logo" >
                    <h4 class="pryingchess d-flex justify-content-center mb-5 text-dark" style="font-size: 2rem;">PRYINGCHESS</h4>
                </div>
                <h3 class="text-center text-danger mb-3"><strong>ADMIN LOGIN</strong></h3>
                <form action="/admin" method="post" class="d-flex flex-column align-items-center">
            
                    <div class="form-outline mb-4">
                        <input class="glowing-border" type="email" style="width: 21rem;" id="adEmail" name="adEmail" class="form-control"
                            placeholder="Email address" required/>
                    </div>

                    <div class="form-outline mb-4">
                        <input class="glowing-border" type="password" style="width: 21rem;" id="adPassword" name="adPassword" class="form-control"
                            placeholder="Password" required/>

                    </div>


                    {{#if ErrorLogin}}
                    <p>Incorrect username or password</p>
                    {{/if}}


                    <div class="form-outline text-center pt-1 pb-1">
                        <input class="btn btn-dark" style="width: 21rem;" type="submit" value="Log In">
                    </div>
                    
                </form>


            </div>
        </div>
    </div>
</section>







