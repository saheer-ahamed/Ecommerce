                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="table-responsive bg-white">
                                    <table border="0" cellspacing="5" cellpadding="5"
                                        class="d-flex justify-content-center">
                                        <tbody>
                                            <tr>
                                                <td>Minimum date:</td>
                                                <td><input type="text" id="min" name="min"></td>
                                            </tr>
                                            <tr>
                                                <td>Maximum date:</td>
                                                <td><input type="text" id="max" name="max"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <hr>
                                    <table class="table mb-0 display nowrap" id="orderTable"
                                        data-order='[[ 0, "desc" ]]'>
                                        <thead>
                                            <tr>
                                                <th scope="col">
                                                    DATE
                                                </th>
                                                <th scope="col">
                                                    PRODUCT
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">QUANTITY</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">TOTAL PRICE</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">PAYMENT TYPE</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center"> PAYMENT STATUS</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center"> ORDER STATUS</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">VIEW</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">SETTINGS</div>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each data}}
                                            <tr>
                                                <th scope="row" style="color: #666666;">
                                                    <div class="d-flex justify-content-center">{{format this.createdAt}}
                                                    </div>
                                                </th>
                                                <td>
                                                    {{#each this.products}}
                                                    <div class="row flex-column">
                                                        <p>{{this.product.productName}}</p>
                                                    </div>
                                                    {{/each}}
                                                </td>
                                                <td>
                                                    {{#each this.products}}
                                                    <div class="row flex-column mx-3">
                                                        <p>{{this.quantity}}</p>
                                                    </div>
                                                    {{/each}}
                                                </td>
                                                <td>
                                                    <div class="d-flex justify-content-center">₹ {{this.SubTotal}}</div>
                                                </td>
                                                <td>
                                                    <div
                                                        class="d-flex justify-content-center text-decoration-underline">
                                                        {{this.paymentMethod}}
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex justify-content-center badge alert-warning">
                                                        {{this.paymentStatus}}
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex justify-content-center badge alert-info"
                                                        id="{{this._id}}order">
                                                        {{this.orderStatus}}
                                                    </div>
                                                </td>
                                                <td>
                                                    <a href="/admin/orderDetails/{{this._id}}"
                                                        class="d-flex justify-content-center my-1"><i class="fa fa-eye"
                                                            style="font-size:16px"></i></a>
                                                </td>
                                                <td>
                                                    <div class="d-flex justify-content-around">
                                                        <a href="/admin/changeOrder/{{this._id}}" class="my-1"><i
                                                                class="fa fa-share-square" style="font-size:16px"
                                                                id="{{this._id}}change"></i></a>
                                                        <a href="/cancelOrder/{{this._id}}" class="my-1 text-danger"><i
                                                                class="fa fa-window-close" style="font-size:16px"
                                                                id="{{this._id}}cancel"></i></a>
                                                    </div>

                                                </td>
                                            </tr>
                                            <script>
                                                var status = '{{this.orderStatus}}';
                                                var id = '{{this._id}}'
                                                var element = document.getElementById(`${id}order`);
                                                var changeStatus = document.getElementById(`${id}change`);
                                                var cancelStatus = document.getElementById(`${id}cancel`)
                                                if (status === "Cancelled") {
                                                    element.classList.remove("alert-info");
                                                    element.classList.add("alert-danger");
                                                    cancelStatus.style.display = 'none';
                                                    changeStatus.style.display = 'none';
                                                }

                                            </script>

                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
