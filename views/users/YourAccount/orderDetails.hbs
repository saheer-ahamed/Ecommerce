<body class="animsition">

    <!-- Header -->
    <header class="header-v4">
        <!-- Header desktop -->
        <div class="container-menu-desktop">
            <!-- Topbar -->
            {{>user-header}}
            <hr>

            <div class="container mt-2 printableArea">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="text-left logo px-4 pt-4">
                                <img src="/images/icons/logo-01.png">

                                <button class="btn p-1 printBtn" onclick="window.print()">
                                    <i class="fa fa-print" style="font-size:24px"></i>
                                </button>

                            </div>
                            <div class="invoice p-5">
                                <h5>Thanks for your Order, <strong>{{data.userID.yourname}} !</strong></h5>

                                <div class="payment border-top mt-3 mb-3 border-bottom table-responsive">
                                    <table class="table table-borderless">
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <div class="py-2">
                                                        <span class="d-block text-dark">
                                                            <strong>Order Date</strong>
                                                        </span>
                                                        <span>{{format data.createdAt}}</span>
                                                        <span class="d-block text-dark mt-3">
                                                            <strong>Order Status</strong>
                                                        </span>
                                                        <span>{{data.orderStatus}}</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="py-2">
                                                        <span class="d-block text-dark">
                                                            <strong>Order No</strong>
                                                        </span>
                                                        <span>#{{data._id}}</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="py-2">
                                                        <span class="d-block text-dark">
                                                            <strong>Payment</strong>
                                                        </span>
                                                        <span>{{data.paymentMethod}}</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="py-2">
                                                        <span class="d-block text-dark">
                                                            <strong>Shipping Address</strong>
                                                        </span>
                                                        <span>{{data.deliveryAddress.apartment}},
                                                            {{data.deliveryAddress.street}},
                                                            {{data.deliveryAddress.landmark}}</span>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="product border-bottom table-responsive">
                                    <table class="table table-borderless">
                                        <tbody>
                                            {{#each data.products}}
                                            <tr>
                                                <td width="20%">
                                                    <img src="/images/productsImg/{{this.product.Image.[0]}}"
                                                        width="90">
                                                </td>
                                                <td width="60%">
                                                    <span class="font-weight-bold">{{this.product.productName}}</span>
                                                    <div class="product-qty">
                                                        <span class="d-block">Quantity: {{this.quantity}}</span>
                                                    </div>
                                                </td>
                                                <td width="20%">
                                                    <div class="text-right">
                                                        <span
                                                            class="font-weight-bold">â‚¹ {{this.product.sellPrice}}</span>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row d-flex justify-content-end">
                                    <div class="col-md-5">
                                        <table class="table table-borderless">
                                            <tbody class="totals">
                                                <tr>
                                                    <td>
                                                        <div class="text-left">
                                                            <span class="text-muted">Subtotal</span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="text-right">
                                                            <span>â‚¹ {{data.SubTotal}}</span>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="text-left">
                                                            <span class="text-muted">Discount</span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="text-right">
                                                            <span class="text-success"> â‚¹ {{data.discount}} </span>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr class="border-top border-bottom">
                                                    <td>
                                                        <div class="text-left">
                                                            <span class="font-weight-bold">Total</span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="text-right">
                                                            <span class="font-weight-bold">â‚¹ {{data.Total}}</span>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <p>We will be sending shipping confirmation email when the item shipped successfully!
                                </p>
                                <p class="font-weight-bold mb-3">Thanks for shopping with us!</p>
                                <span style="text-decoration: underline;">TEAM PRYINGCHESS</span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <hr>


            <!-- Back to top -->
            <div class="btn-back-to-top" id="myBtn">
                <span class="symbol-btn-back-to-top">
                    <i class="zmdi zmdi-chevron-up"></i>
                </span>
            </div>

            <style>
                @media print {
                    body * {
                        visibility: hidden;
                    }
                    .printBtn{
                        z-index: -1;
                    }

                    .printableArea,
                    .printableArea *{
                        visibility: visible;
                    }

                    .printableArea {
                        position: absolute;
                        left: 0;
                        top: 0;
                    }
                }
            </style>
            <!--===============================================================================================-->
            <script src="/js/main.js"></script>

</body>

</html>